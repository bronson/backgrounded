#!/usr/bin/env bash

pidfile="$1"
logfile="$2"
cmd="$3"


# shim so we're compatible with bash 3
# [ -z "$BASHPID" ] && BASHPID="$(sh -c 'echo $PPID')"

# should probably let the client handle logging on its own
# echo "$(date +%FT%T%z) $$ starting task: $cmd"

echo "$$" > "$pidfile"
trap "rm -f '$pidfile'" INT TERM EXIT

bash -c -l "$cmd"
